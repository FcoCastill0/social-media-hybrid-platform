{
  "name": "social-media-hybrid-platform",
  "version": "1.0.0",
  "description": "A Node.js demo application demonstrating hybrid MySQL + MongoDB architecture for social media platforms",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "init-mysql": "mysql -h $MYSQL_HOST -u root -p$MYSQL_ROOT_PASSWORD < mysql_setup.sql",
    "init-mongo": "node mongo_setup.js",
    "setup": "npm run init-mysql && npm run init-mongo",
    "dev": "nodemon app.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "nodejs",
    "mysql",
    "mongodb",
    "hybrid-database",
    "social-media",
    "docker",
    "microservices"
  ],
  "author": "Frank Castle",
  "license": "MIT",
  "dependencies": {
    "mongodb": "^5.0.0",
    "mysql2": "^3.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
